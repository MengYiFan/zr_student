/**index.wxss**/
@import "../../templates/course/course.wxss";
@import "../../templates/video/video.wxss";
@import "../../templates/empty/empty.wxss";
/* @import "../../templates/pay/pay.wxss"; */

.swiper-container {
  width: 750rpx;
  height: 320rpx;
}

.swiper-list {
  width: 750rpx;
  height: 320rpx;
  margin: 30rpx 0;
}

.swiper-item {
  padding: 0 10rpx;
  box-sizing: border-box;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.function-list {
  padding: 30rpx 48rpx 5rpx;
  background-color: #fff;
}

.function-list-row {
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 45rpx;
}

.function-item-detail {
  display: block
}

.function-item-icon {
  margin: 0 auto;
  width: 106rpx;
  height: 106rpx;
  display: block;
  padding: 0;
  background-color: #f8f8f9;
}

.function-item-title {
  display: block;
  margin-top: 12rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
}

//
.teacher-list {
  align-items: center;
  overflow-x: auto;
}

.teacher-item {
  width: 104rpx;
  flex: 0 0 104rpx;
  text-align: center;
  margin-right: 98rpx;
}

.teacher-item:last-child {
  margin-right: 0;
}

.teacher-item-image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #f8f8f9;
  display: block;
}

.teacher-item-name {
  color: #1e1e1e;
  font-size: 26rpx;
  margin-top: 30rpx;
}