/* pages/self/self.wxss */
.header {
  background-color: #fff;
  padding: 30rpx;
  height: 360rpx;
  text-align: center;
}

.header-image {
  width: 145rpx;
  height: 145rpx;
  background-color: #ccc;
  display: block;
  border-radius: 50%;
  margin: 40rpx auto;
}

.header-name {
  font-size: 38rpx;
  color: 383838;
  display: block;
}

.header-account {
  color: #dcdcdc;
  font-size: 26rpx;
}

.row-cells {
  position: relative;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
}

.row-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  cursor: pointer;
  margin-bottom: 40rpx;
  color: #aaa;
}

.row-cell:last-child {
  margin-bottom: 0;
}

.row-cell:active {
  background: #f7f7f8;
}

.row-cell-left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}

.row-cell-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: #f7f7f8;
  vertical-align: top;
}

.row-cell-text {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #1e1e1e;
  vertical-align: bottom;
  font-weight: 500;
}

.row-cell-arrow {
  width: 26rpx;
  position: relative;
}

.row-cell-arrow::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #aaa;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}