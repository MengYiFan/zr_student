/* pages/video/live/live.wxss */
@import "../../../public/animate.wxss"

.live-container {
  height: 100%;
  overflow: hidden;
  background-color: #101010;
}

.video-live {
  position: relative;
  width: 100%;
  height: 420rpx;
}

.video-live-player {
  width: 100%;
  height: 420rpx;
}

.video-live-404 {
  position: absolute;
  top: 120rpx;
  left: 0rpx;
  width: 100%;
  font-size: 26rpx;
  color: #b6b6b6;
  text-align: center;
  z-index: 99999;
}

.video-live-404-image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.comment {
  height: calc(100vh - 500rpx);
  font-size: 28rpx;
  color: #b8b8b8;
  opacity: .75;
  overflow-y: scroll;
}

.comment-detail {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box; 
  font-weight: lighter;
  word-break:break-all;
}

.comment-detail-content {
   background-color: transparent; 
}

.comment-detail-content label {
  font-weight: 500;
  margin-right: 20rpx;
}

.video-live-bottom {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #f8f8f9;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, .8);
}

.input-placeholder {
  color: #b8b8b8;
}

.video-live-input {
  flex: 1 1 auto;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.video-live-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.video-live-btn-image {
  width: 40rpx;
  height: 40rpx;
}

/* 打赏 */
.reward {
  position: fixed;
  bottom: 60px;
  right: 30rpx;
  opacity: .8;
  z-index: 9999;
}

.reward image {
  width: 80rpx;
  height: 80rpx;
}

.reward-list {
  transition: all .6s;
}

.hidden-reward {
  display: none;
  opacity: 0;
}

.show-reward {
  opacity: 1;
  display: block;
}

.reward-item {
  display: block;
  margin-bottom: 20rpx;
}