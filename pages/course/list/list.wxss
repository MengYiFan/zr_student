/* pages/course/list/list.wxss */
@import "../../templates/course/course.wxss";
@import "../../templates/video/video.wxss";
@import "../../templates/empty/empty.wxss";

.list {
  margin: 20rpx;
}

.list-header {
  position: fixed;
  top: 0;
  left:0;
  width: 100%;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  height: 80rpx;
  background-color: #F6F7F8;
  z-index: 999;
}

.list-search {
  border-radius: 12rpx;
  background-color: #E7EBEC;
}

.list-search-icon {
  /* margin: -34rpx 20rpx 0 20rpx;  */
  position: absolute;
  left: 13rpx;
  top: 13rpx;
}

.list-search-input {
  display: inline-block;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  color: #091c1f;
  font-size: 28rpx;
}

.list-search {
  flex: 1 1 auto;
  position: relative;
}

.list-search-btn {
  color: #ed1c24;
  font-size: 34rpx;
  margin-left: 20rpx;
  width: 70rpx;
}

.list-search-icon-clear {
  position: absolute;
  right: 13rpx;
  top: 13rpx;
}

.tabs {
  position: fixed;
  top: 80rpx;
  left: 0;
  background-color: #F6F7F8;
  width: calc(100% - 40rpx);
  height: 100rpx;
  margin: 0 20rpx;
  display: flex;
  z-index: 9999;
}

.content-title {
  flex: 1 1 auto;
  height: 100rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid transparent;
  margin-bottom: 40rpx;
  text-align: center;
}

.content-title.activite {
  border-bottom-color: #ed1c24;
}

.search-result {
  margin: 220rpx 0 40rpx;
}

.search-result-video {
  margin-top: 60rpx;
}