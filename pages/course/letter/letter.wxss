/* pages/course/letter/letter.wxss */
.letter-container {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  width: calc(100vw - 60rpx);
  height: calc(100vh - 40rpx);
}

.letter-subtitle {
  margin-top: 7rpx;
  font-size: 24rpx;
  background-color: #ED1C24;
  padding: 16rpx 30rpx;
  color: #fff;
  border-radius: 24rpx;
}

.letter-header {
  margin-top: 30rpx;
  color: #1e1e1e;
  font-size: 38rpx;
  font-weight: bold;
}

.letter-header-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: text-top;
  margin-right: 10rpx;
}

.letter-header-text {
  font-weight: lighter;
  font-size: 24rpx;
  color: #c6c6c6;
  margin-left: 12rpx;
}

.letter-content {
  margin-top: 34rpx;
}

.letter-content-cover {
  display: block;
  width: 100%;
  height: 280rpx;
  min-height: auto;
  background-color: rgba(133, 133, 133, .1);
}

.letter-content-detail {
  display: block;
  line-height: 50rpx;
  margin-top: 40rpx;
  color: #666;
  font-size: 26rpx;
}

.letter-btn {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 60rpx;
}

.letter-btn-apply {
  background-color: #fff;
  border: 1rpx solid #ED1C24;
  color: #ED1C24;
  box-sizing: border-box;
}

.letter-btn-enter {
  background-color: #ED1C24;
  color: #fff;
}

.letter-btn-share {
  background-color: #1EC671;
  color: #fff;
}

.letter-btn-apply,
.letter-btn-enter,
.letter-btn-share {
  width: 203rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 26rpx;
}

.letter-btn-apply:active,
.letter-btn-enter:active,
.letter-btn-share:active {
  opacity: .75;
}